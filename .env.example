# 多模态水印工具 Web Demo 环境配置

# Flask 配置
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# 服务器配置
HOST=0.0.0.0
PORT=5000
DEBUG=True

# 文件配置
UPLOAD_FOLDER=demo_uploads
OUTPUT_FOLDER=demo_outputs
MAX_CONTENT_LENGTH=104857600  # 100MB

# 模型配置 (可选，会覆盖默认配置)
# HF_HOME=/path/to/your/huggingface/cache
# TRANSFORMERS_CACHE=/path/to/your/transformers/cache

# 离线模式 (如果需要完全离线运行)
# TRANSFORMERS_OFFLINE=1
# HF_HUB_OFFLINE=1
# DIFFUSERS_OFFLINE=1

# 设备配置
# DEVICE=cuda  # 或 cpu，留空则自动检测

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=watermark_demo.log